<Window x:Class="GIBDD.Views.DriversWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Водители" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель фильтрации -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5">
            <ComboBox x:Name="FilterCombobox" 
                      Width="120" 
                      Height="25" 
                      Margin="5,0"
                      ItemsSource="{Binding Categories}"
                      SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                      DisplayMemberPath="."/>

            <TextBox x:Name="FindTextBox" 
                     Width="120" 
                     Height="25" 
                     Margin="5,0"
                     Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <Button Content="Поиск" 
                    x:Name="Finder" 
                    Width="60" 
                    Height="25" 
                    Margin="5,0"
                    Command="{Binding SearchDriversCommand}"/>
        </StackPanel>

        <Button x:Name="Back" 
                Content="Назад" 
                Width="50" 
                HorizontalAlignment="Left"
                Height="25"
                Margin="10,5,0,0" 
                Click="Back_Click"/>

        <!-- DataGrid -->
        <DataGrid ItemsSource="{Binding Drivers}" 
                  AutoGenerateColumns="True"
                  Grid.Row="1"
                  SelectedItem="{Binding SelectedDriver, Mode=TwoWay}"
                  MouseDoubleClick="DataGrid_MouseDoubleClick"
                  Margin="10"/>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <Button x:Name="Add" 
                    Content="Добавить"
                    Width="70" 
                    Height="25"
                    Margin="0,0,10,0" 
                    Click="Add_Click"/>

            <Button x:Name="Delete" 
                    Content="Удалить"
                    Width="70" 
                    Height="25"
                    Click="Delete_Click"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="GIBDD.Views.AddCarsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GIBDD.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Добавление автомобиля" Height="400" Width="600">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15" Width="400">

                <!-- Обязательные поля -->
                <TextBlock Text="VIN номер*" FontWeight="Bold"/>
                <TextBox x:Name="CarVimBox" Margin="0,5,0,10" MaxLength="50"/>

                <TextBlock Text="Модель автомобиля" FontWeight="Bold"/>
                <TextBox x:Name="CarModelBox" Margin="0,5,0,10" MaxLength="45"/>

                <TextBlock Text="Год выпуска" FontWeight="Bold"/>
                <TextBox x:Name="CarYearBox" Margin="0,5,0,10" MaxLength="4"/>

                <TextBlock Text="Вес автомобиля" FontWeight="Bold"/>
                <TextBox x:Name="CarWeightBox" Margin="0,5,0,10" MaxLength="4"/>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                    <Button Content="Сохранить" Click="SaveBtn_Click" Width="80" Margin="5"/>
                    <Button Content="Отмена" Click="CancelBtn_Click" Width="80" Margin="5"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>


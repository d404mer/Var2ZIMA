<Window x:Class="GIBDD.Views.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Главное меню" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Главное меню" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>
            
            <Button Content="Водители" 
                    Width="200" 
                    Height="40" 
                    Margin="0,10"
                    FontSize="16"
                    Click="DriversBtn_Click"/>
            
            <Button Content="Автомобили" 
                    Width="200" 
                    Height="40" 
                    Margin="0,10"
                    FontSize="16"
                    Click="CarsBtn_Click"/>
            
            <Button Content="Выход" 
                    Width="200" 
                    Height="40" 
                    Margin="0,30,0,10"
                    Click="ExitBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>


<Window x:Class="GIBDD.Views.ViewDriverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование водителя" Height="700" Width="900"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая колонка - фото и кнопки -->
        <StackPanel Grid.Column="0" Margin="15" VerticalAlignment="Center">
            <Border BorderBrush="Gray" BorderThickness="1" Background="LightGray" 
                    Height="200" Width="200" HorizontalAlignment="Center">
                <Image x:Name="DriverPhoto" Source="{Binding Photo}" 
                       Stretch="Uniform"/>
            </Border>
            <Button Content="Выбрать фото" Width="100" Margin="0,5,0,0" 
                    HorizontalAlignment="Center" Click="Button_Click_1"/>


            <StackPanel Margin="0,20,0,0">
                <Button Content="Сохранить" Width="80" Margin="0,5,0,0" 
                         HorizontalAlignment="Center" Background="LightGreen" Click="Button_Click" />
                <Button Content="Отмена" Width="80" Margin="0,5,0,0" 
                        Click="Cancel_Click" HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- Правая колонка - все данные для редактирования -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15">
                <TextBlock Text="Редактирование водителя" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                <!-- Личные данные -->
                <GroupBox Header="Личные данные" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Фамилия:*" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding Surname}" Grid.Column="1" Margin="5,0,0,0" Height="25"/>

                            <TextBlock Text="Имя:*" FontWeight="Bold" Grid.Column="2" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding Name}" Grid.Column="3" Margin="5,0,0,0" Height="25"/>
                        </Grid>

                        <TextBlock Text="Отчество:*" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBox Text="{Binding MiddleName}" Height="25"/>
                    </StackPanel>
                </GroupBox>

                <!-- Паспортные данные -->
                <GroupBox Header="Паспортные данные" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Серия:*" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding PassportSeries}" Grid.Column="1" Margin="5,0,0,0" Height="25" MaxLength="4"/>

                            <TextBlock Text="Номер:*" FontWeight="Bold" Grid.Column="2" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding PassportNumber}" Grid.Column="3" Margin="5,0,0,0" Height="25" MaxLength="6"/>
                        </Grid>

                        <TextBlock Text="Почтовый индекс:*" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBox Text="{Binding Postcode}" Height="25"/>

                        <TextBlock Text="Адрес регистрации:*" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBox Text="{Binding Address}" Height="40" TextWrapping="Wrap" AcceptsReturn="True"/>

                        <TextBlock Text="Адрес проживания:*" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBox Text="{Binding ActualAdress}" Height="40" TextWrapping="Wrap" AcceptsReturn="True"/>
                    </StackPanel>
                </GroupBox>

                <!-- Работа -->
                <GroupBox Header="Работа" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <TextBlock Text="Место работы:" FontWeight="Bold"/>
                        <TextBox Text="{Binding Company}" Height="25"/>

                        <TextBlock Text="Должность:" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBox Text="{Binding JobName}" Height="25"/>
                    </StackPanel>
                </GroupBox>

                <!-- Контакты -->
                <GroupBox Header="Контакты" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <TextBlock Text="Телефон:*" FontWeight="Bold"/>
                        <TextBox Text="{Binding Phone}" Height="25"/>

                        <TextBlock Text="Email:*" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBox Text="{Binding Email}" Height="25"/>
                    </StackPanel>
                </GroupBox>

                <!-- Водительское удостоверение -->
                <GroupBox Header="Водительское удостоверение" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Серия:*" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding LicenceSeries}" Grid.Column="1" Margin="5,0,0,0" Height="25"/>

                            <TextBlock Text="Номер:*" FontWeight="Bold" Grid.Column="2" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding LicenceNumber}" Grid.Column="3" Margin="5,0,0,0" Height="25"/>
                        </Grid>

                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Дата выдачи:*" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding LicenceDate}" Grid.Column="1" Margin="5,0,0,0" Height="25"/>

                            <TextBlock Text="Срок действия:*" FontWeight="Bold" Grid.Column="2" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding ExpireDate}" Grid.Column="3" Margin="5,0,0,0" Height="25"/>
                        </Grid>

                        <TextBlock Text="Категории:*" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBox Text="{Binding Categories}" Height="25"/>

                        <TextBlock Text="Статус:*" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBox Text="{Binding LicenceStatus}" Height="25"/>
                    </StackPanel>
                </GroupBox>

                <!-- Замечания -->
                <GroupBox Header="Замечания" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <TextBox Text="{Binding Description}" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
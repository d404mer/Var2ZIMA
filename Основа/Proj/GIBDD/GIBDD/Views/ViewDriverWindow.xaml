<Window x:Class="GIBDD.Views.ViewDriverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GIBDD.Views"
        mc:Ignorable="d"
        Title="ViewDriverWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="91*"/>
            <ColumnDefinition Width="309*"/>
        </Grid.ColumnDefinitions>


        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="1">
            <StackPanel Margin="20">
                <TextBlock Text="Анкета водителя" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="ФИО:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Surname}"/>
                <TextBlock Text="{Binding Name}"/>
                <TextBlock Text="{Binding MiddleName}"/>

                <TextBlock Text="Паспорт:" FontWeight="Bold" Margin="0,10,0,0"/>
                <!--<TextBlock Text="{Binding PassportSeries} 
                {Binding PassportNumber}"/>-->

                <TextBlock Text="Телефон:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding Phone}"/>

                <TextBlock Text="Email:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding Email}"/>

                <!-- Добавь остальные поля по необходимости -->

            </StackPanel>
        </ScrollViewer>
        <Button Grid.Column="0" Content="Закрыть" Width="80" Margin="0,20,0,0" 
            HorizontalAlignment="Center"/>
    </Grid>
</Window>

<Window x:Class="GIBDD.Views.AddDriversWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GIBDD.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Добавление водителя" Height="814" Width="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15" Width="400">

                <!-- Обязательные поля -->
                <TextBlock Text="Фамилия*" FontWeight="Bold"/>
                <TextBox x:Name="SurnameBox" Margin="0,5,0,10"/>

                <TextBlock Text="Имя*" FontWeight="Bold"/>
                <TextBox x:Name="NameBox" Margin="0,5,0,10"/>

                <TextBlock Text="Отчество*" FontWeight="Bold"/>
                <TextBox x:Name="MiddleNameBox" Margin="0,5,0,10"/>

                <TextBlock Text="Паспорт (серия)*" FontWeight="Bold"/>
                <TextBox x:Name="PassportSeriesBox" Margin="0,5,0,10" MaxLength="4"/>

                <TextBlock Text="Паспорт (номер)*" FontWeight="Bold"/>
                <TextBox x:Name="PassportNumberBox" Margin="0,5,0,10" MaxLength="6"/>

                <TextBlock Text="Адрес регистрации*" FontWeight="Bold"/>
                <TextBox x:Name="AddressBox" Margin="0,5,0,10" Height="40" TextWrapping="Wrap"/>

                <TextBlock Text="Адрес проживания*" FontWeight="Bold"/>
                <TextBox x:Name="ActualAddressBox" Margin="0,5,0,10" Height="40" TextWrapping="Wrap"/>

                <!-- Необязательные поля -->
                <TextBlock Text="Место работы"/>
                <TextBox x:Name="CompanyBox" Margin="0,5,0,10"/>

                <TextBlock Text="Должность"/>
                <TextBox x:Name="JobNameBox" Margin="0,5,0,10"/>

                <TextBlock Text="Мобильный телефон*" FontWeight="Bold"/>
                <TextBox x:Name="PhoneBox" Margin="0,5,0,10"/>

                <TextBlock Text="Email*" FontWeight="Bold"/>
                <TextBox x:Name="EmailBox" Margin="0,5,0,10"/>

                <TextBlock Text="Фотография*" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="PhotoBox" Width="300" Margin="0,5,10,10"/>
                    <Button Content="Обзор" Click="BrowsePhoto_Click" Width="60"/>
                </StackPanel>

                <TextBlock Text="Замечания"/>
                <TextBox x:Name="DescriptionBox" Margin="0,5,0,10" Height="60" TextWrapping="Wrap"/>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                    <Button Content="Сохранить" Click="SaveBtn_Click" Width="80" Margin="5"/>
                    <Button Content="Отмена" Click="CancelBtn_Click" Width="80" Margin="5"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
